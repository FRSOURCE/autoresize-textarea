    "resize textarea",
    "lightweight",
    "simple",
    "autosize",
    "fluid textarea"
  ],
  "bugs": {
    "url": "https://github.com/FRSOURCE/autoresize-textarea/issues"
  },
  "author": "Jakub Freisler <jakub@frsource.org>",
  "license": "MIT",
  "devDependencies": {
    "@frsource/eslint-config": "1.48.0",
    "@frsource/prettier-config": "1.29.0",
    "@frsource/semantic-release-config": "1.68.0",
    "eslint": "9.27.0",
    "globals": "16.1.0",
    "microbundle": "0.15.1",
